<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="JaCoreUI.App"
             RequestedThemeVariant="Dark">

    <Application.Styles>
        <FluentTheme>
            <StyleInclude Source="/Styles/LightTheme.axaml"/>
            <StyleInclude Source="/Styles/DarkTheme.axaml"/>
        </FluentTheme>
    </Application.Styles>
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Include your theme resources -->
                <ResourceInclude Source="/Styles/DarkTheme.axaml"/>
                <ResourceInclude Source="/Styles/LightTheme.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


</Application>